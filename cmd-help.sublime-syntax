%YAML 1.2
---
name: Command Help
file_extensions:
  - cmd-help # doesn't really exist, but useful for the shortname
scope: text.help

contexts:
  main:
    - match: '^\s*(?=\S)'
      push: line-begin

  line-begin:
    - match: '-[:alpha:]\b'
      scope: option-def.help
    - match: \n
      pop: true
