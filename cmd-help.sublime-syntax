%YAML 1.2
---
name: Command Help
file_extensions:
  - cmd-help # doesn't really exist, but useful for the shortname
scope: text.help

variables:
  # todo: make this [:alpha:][:alnum:]* ?
  word: '[:alpha:]*\b'
  kebab_word: '{{word}}(-{{word}})*'

contexts:
  main:
    - match: '^\s*(?=\S)'
      push: line-begin

  ### BACKTRACK

  else-pop:
    - match: ''
      pop: true

  eol-pop:
    - match: \n
      pop: true

  ### DEFINITIONS

  line-begin:
    - match: ''
      set: [def-opt-short, def-opt-long]
    - include: else-pop
    - include: eol-pop

  def-opt-short:
    - match: '-[:alpha:]\b'
      scope: entity.name.cmd-option.help
      set: def-opt-short-next
    - include: else-pop
    - include: eol-pop

  def-opt-short-next:
    - match: ', '
      set: def-opt-long
    - include: else-pop
    - include: eol-pop

  def-opt-long:
    - match: '--{{kebab_word}}'
      scope: entity.name.cmd-option.help
    - include: else-pop
    - include: eol-pop
